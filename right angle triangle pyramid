package square_pyramid;
import java.util.*;

class square{
    public static void main(String[] Args){
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter Max size : ");
        int s = sc.nextInt();

        int k = 1;

        for(int i = 0;i<s;i++){
            for(int j = 0;j<=i;j++){
                System.out.print(k*k + " ");
                k++;
            }
            System.out.println();
        }
    }
}
